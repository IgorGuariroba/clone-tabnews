{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "implementação do tab new para https://www.tabnews.com.br para o https://curso.dev",
  "engines": {
    "node": "22.x"
  },
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently --n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --colors --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wat-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint  --dir .",
    "lint:eslint:fix": "next lint --fix",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "Igor Guariroba",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.25",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.3.0",
    "swr": "^2.2.5",
    "uuid": "11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.20",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.6",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "postcss": "^8.4.49",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.15"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
